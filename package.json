{
  "name": "coding-agent",
  "version": "0.1.0",
  "description": "Autonomous coding agents using Claude SDK and Convex for persistence",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "coding-agent": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsx watch src/cli/index.ts",
    "test": "vitest",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:e2e": "vitest --config vitest.e2e.config.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "convex:dev": "npx convex dev",
    "convex:codegen": "npx convex codegen"
  },
  "keywords": [
    "ai",
    "agents",
    "claude",
    "anthropic",
    "typescript",
    "convex"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^1.0.0",
    "convex": "^1.17.2",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.0",
    "vitest": "^2.1.8"
  }
}
